package UI;

import java.awt.Color;
import java.awt.Dimension;
import java.awt.GradientPaint;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.awt.Insets;
import java.awt.Point;

import javax.swing.BorderFactory;
import javax.swing.JButton;
import javax.swing.JComboBox;

@SuppressWarnings("serial")
public class superComboBox extends JComboBox
{
	private Color c_Color;
	
	public static int allComboBoxWidth = 0;
	public static int allComboBoxHeight = 0;
	
	public superComboBox(String title, Color i_Color)
	{
		super(title);
		c_Color = i_Color;
        setPreferredSize(new Dimension(allComboBoxWidth, allComboBoxHeight));
        setMargin(new Insets(6, 6, 6, 6));
        setBorder(BorderFactory.createLineBorder(c_Color, 3));

	}
	
    @Override
    protected void paintComponent(Graphics g){
        Graphics2D g2 = (Graphics2D)g.create();
        g2.setPaint(new GradientPaint(
                new Point(0, 0), 
                Color.WHITE, 
                new Point(0, getHeight()/2), 
                c_Color));
        g2.fillRect(0, 0, getWidth(), getHeight()/3);
        g2.setPaint(new GradientPaint(
                new Point(0, getHeight()/3), 
                c_Color, 
                new Point(0, getHeight()), 
                c_Color));
        g2.fillRect(0, getHeight()/3, getWidth(), getHeight());
        g2.dispose();

        super.paintComponent(g);
    }
}
